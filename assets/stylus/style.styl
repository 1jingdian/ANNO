@require "lib/vendor"
$page_width = 600px

html, body
  height 100%

.ng-view
  height calc(100% \- 50px)
  margin-top 50px
  overflow-y auto

.ng-hide
  display: none !important

body
  padding: 50px
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
  background #f9f9f9
  color #111
a
  color #00B7FF
  cursor pointer

button
  cursor pointer

// [link]

pre
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif

@import "ui/reset.styl"
@import "ui/button.styl"
@import "ui/form.styl"
@import "ui/modal.styl"
@import "ui/bar.styl"
@import "ui/loading.styl"
@import "ui/alert.styl"
@import "ui/card.styl"

header
  &.header
    bar()
    span
      float left
  &.vanished
    right auto
    box-shadow none
    background none
    color #aaa

@import "mod_aside.styl"
@import "mod_auth.styl"

//#all-books, #one-book, #about, #info, #friends
.ng-view > section
  margin 3em 3em 0

// all books

ul.books
  padding 0
  margin 0 -1em

li.book
  margin 1em

@import "widgets/book.styl"

.modal-search
  .modal-footer
    div:first-child
      text-align left
      color #999

#new-book-name
  border 1px solid #eee
  padding .6em 1em
  box-sizing border-box
  outline 0
  width 100%
  &:focus
    border-color #999
.tip
  color #999
  text-align right
  margin-top 1em
  & + .tip
    margin-top 0
    margin-bottom 1em
  span
    color rgb(237, 20, 61)
// search result
.search-results
  margin-top 1em
  padding 0
  margin-right -20px
  padding-right 20px
  max-height 260px
  overflow-y scroll
  li
    list-style none
    overflow hidden
    padding 8px
    position relative
    &:before, &.active &:before
      content ""
      position absolute
      top 0
      right 0
      bottom 0
      left 0
      background rgba(0, 0, 0, .15)
      border-radius 3px
      transform(translateZ(0))
    &.active
      &:before
        border 3px solid rgb(32, 178, 170)
        background rgba(0, 0, 0, .05)
    &:before
      display none
    img
      width 120px
      float left
      margin-right 8px
    .result-info
      // display inline-block
    h4
      word-break break-word
      margin 0
    p
      color #666
      font-size .8em
    &:hover, &.active
      &:before
        display block

.selected-book-name
  color #e74c3c


// one book
.ng-view.pushed
  .main
    top 60px

#one-book
  h1
    a
      color #000
      text-decoration none

.cubic-view
  float left

.main
  margin-left 310px
  transform(translateZ(0))


header
  h2, .order
    display inline-block
  .order
    position relative
    left 3em

@import "widgets/book-3d.styl"

.cubic-view
  .book-back
    width 308px

ul.notes
  padding 0
@import "widgets/note-card.styl"

.modal-export
  h3
    margin-bottom 0
.export-preview
  font-size 90%
  white-space pre-wrap
  overflow-y scroll
  max-height 300px
  margin-top 1em
  // box-shadow inset 0 0 2px #ccc
  border 2px solid #eee
  padding 1em
  box-sizing border-box
  -webkit-user-select text
  user-select text
  pre
    white-space pre-wrap


// one note
@import "note.styl"


// editor
@import "edit.styl"

// about
@import "mod_about.styl"

// info
@import "mod_info.styl"

// friends
@import "mod_friends.styl"

// mod_error
.not_found
  font-size 2em
  position absolute
  top 30%
  left 50%
  transform(translate(-50%, -50%))
  color #aaa
  text-align center
  a
    display block
    font-size .8em
    margin-top 1em

// mod_fav
.footnote
  margin-top 1em
