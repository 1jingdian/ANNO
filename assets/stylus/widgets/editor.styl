#editor
  position relative
  form
    margin-bottom 100px
  .guide
    opacity 0
    position fixed
    top 0
    bottom 0
    width 20px
    border-left 1px solid lightpink
    left calc(50% \- 340px)
    transition opacity .3s
    &:before
      content ""
      position absolute
      top 0
      right 0
      bottom 0
      left -20px
      width 20px
    &:hover
      opacity 1
      cursor col-resize
  input
    border 0
    background none
    &:focus
      outline 0

.CodeMirror pre.CodeMirror-placeholder
  color #999


// specific form controls
#title, #page
  display block

#title
  font-size 2em
  font-weight bold
  margin-bottom 1em
  width 100%
  box-sizing border-box

#page
  font-size 1.1em
  margin-bottom 2em
  color gray

#privacy
  color gray
  input
    margin-right .5em
  label
    margin-right 1em

#page_no
  line-height 1.65
  color gray
  vertical-align baseline
  min-width 12em

// warning
error_tip()
  background rgba(240, 72, 72, 0.8)
  color #fff
  padding .2em .8em
  border-radius 3px
  display inline-block

.warning
  error_tip()
  opacity 1
  transition opacity .2s
  &.right
    transform translateX(-105%)
  &.hidden
    transform translateX(-105%)
    opacity 0

.toolbar
  background #EEE
  padding .6em 1em
  border-radius .3em
  li
    display inline-block
    background #fcfcfc
    padding .4em
    border-radius 2px
    cursor pointer
    margin-right .6em
    font-size .9em
    position relative
    &:active, &.active
      background #ccc
      box-shadow inset 0 0 3px #999
    #upload
      opacity 0
      position absolute
      top 0
      right 0
      bottom 0
      left 0
