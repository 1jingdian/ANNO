#info
  .summary
    white-space pre-wrap
    line-height 1.8
    a
      color lightseagreen
      text-decoration none
      margin 0 .3em
      &:hover
        background lightseagreen
        color #fff
  .books
    .add-note
      font-size 1em
  & > section
    h1
      font-size 1.32em
    &.statistic
      h1
        margin-top 0
    &.account
      .ui-card
        text-align center
        margin-right 1em
      a
        font-size 3em
        // color #4B4D4E
        color #757778
        &:hover, &.active
          // color #5FB336
          color lightseagreen
        &.active
          cursor default
      span
        font-size .4em
        display block
  .bind-choice
    .icon-evernote
      color lightgray
      float left
      font-size 3em
      margin-right .3em
    a
      &:first-of-type
        display inline-block
        padding-bottom .1em
        margin-bottom .2em
        border-bottom 1px solid #eee
      &:last-of-type
        display block