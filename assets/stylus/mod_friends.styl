#friends
  .friends
    padding 0
    margin 0
  .friend
    display inline-block
    margin 1em
    width 60px
    text-align center
    vertical-align top
    a
      color #999
      text-decoration none
      &:hover
        opacity .8
    span
      display block
      margin-top .3em
    img
      border-radius 24px
      box-shadow 0 1px 3px #aaa
    &.more
      font-size 1.5em
      line-height 2em
      a
        color lightseagreen
        &:hover
          opacity .8